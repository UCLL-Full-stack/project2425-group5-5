generator client {
    provider    =   "prisma-client-js"
}

datasource db {
    provider    =   "postgresql"
    url         =   env("DATABASE_URL")
}

model BugReport {
    id              Int         @id @default(autoincrement())
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
    userId          Int         @unique
    user            User        @relation(fields: [userId], references: [id])
    title           String      
    description     String      
    resolved        Boolean
}

model User{
    id              Int         @id @default(autoincrement())
    createdAt       DateTime    @default(now())
    updatedAt       DateTime    @updatedAt
    bugReport       BugReport[]
    username        String
    password        String
    usertype        String
}